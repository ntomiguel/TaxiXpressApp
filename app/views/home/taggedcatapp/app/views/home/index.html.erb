<h1>Home</h1>
<p>Welcome to Our Catalog</p>

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
          <div>
            <%= image_tag product.picture.url(:medium), class: "img-responsive" %>
            <%= link_to product.name, product %>
          </div>
      </div>
    <% end %>
  </div>    
</div>    
